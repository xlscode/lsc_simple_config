Gem::Specification.new do |s|
  s.name        = 'lsc_simple_config'
  s.version     = '0.1.0'
  s.licenses    = ['GPL-3.0']
  s.summary     = "A very simple config file parser"
  s.description = "A simple config (ini) file parser for files similar to the ones "
                   + "used in PHP with parse_ini_file() or in Turbo/Borland Pascal."
                   + "Suitable, when using formats like yaml, xlm or the like would be an exageration."
  s.authors     = ["lscode"]
  s.email       = 'lscode@brandek.pl'
  s.files       = ["lib/lsc_simple_config.rb"]
  s.homepage    = 'https://github.com/xlscode/lsc_simple_config'
  s.metadata    = { "source_code_uri" => "https://github.com/xlscode/lsc_simple_config" }
end
